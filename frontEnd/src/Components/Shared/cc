using System;
using System.Collections.Generic;
using System.Linq;

class Student
{
    public int Id;
    public string Name;
    public int DeptId;
}

class Department
{
    public int Id;
    public string DeptName;
}

class Program
{
    static void Main()
    {
        var students = new List<Student>
        {
            new Student{ Id=1, Name="Ali", DeptId=1 },
            new Student{ Id=2, Name="Sara", DeptId=2 },
            new Student{ Id=3, Name="John", DeptId=3 }
        };

        var depts = new List<Department>
        {
            new Department{ Id=1, DeptName="CSE" },
            new Department{ Id=2, DeptName="EEE" }
        };

      
        var innerJoin = from s in students
                        join d in depts on s.DeptId equals d.Id
                        select new { s.Name, d.DeptName };

        Console.WriteLine("Inner Join:");
        foreach (var item in innerJoin)
            Console.WriteLine(item.Name + " - " + item.DeptName);

       
        var leftJoin = from s in students
                       join d in depts on s.DeptId equals d.Id into grp
                       from d in grp.DefaultIfEmpty()
                       select new { s.Name, Dept = d?.DeptName ?? "No Dept" };

        Console.WriteLine("\nLeft Join:");
        foreach (var item in leftJoin)
            Console.WriteLine(item.Name + " - " + item.Dept);
    }
}
